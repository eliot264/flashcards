            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundDarkColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>